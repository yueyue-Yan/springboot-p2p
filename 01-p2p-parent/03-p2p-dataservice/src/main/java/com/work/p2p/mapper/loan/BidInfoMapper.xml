    <result column="bid_status" jdbcType="INTEGER" property="bidStatus" />
  </resultMap>
<!--带外键-->
  <resultMap id="BidInfoUserResultMap" type="com.work.p2p.beans.loan.BidInfo">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="loan_id" jdbcType="INTEGER" property="loanId" />
    <result column="uid" jdbcType="INTEGER" property="uid" />
    <result column="bid_money" jdbcType="DOUBLE" property="bidMoney" />
    <result column="bid_time" jdbcType="TIMESTAMP" property="bidTime" />
    <result column="bid_status" jdbcType="INTEGER" property="bidStatus" />
    <!--  关联查询（投资记录表与用户表） 一对一关系 ：-->
    <association property="user" javaType="com.work.p2p.beans.user.User">
      <result column="phone" jdbcType="VARCHAR" property="phone" />
      <result column="login_password" jdbcType="VARCHAR" property="loginPassword" />
      <result column="name" jdbcType="VARCHAR" property="name" />
      <result column="id_card" jdbcType="VARCHAR" property="idCard" />
      <result column="add_time" jdbcType="TIMESTAMP" property="addTime" />
      <result column="last_login_time" jdbcType="TIMESTAMP" property="lastLoginTime" />
      <result column="header_image" jdbcType="VARCHAR" property="headerImage" />
    </association>
  </resultMap>

  <sql id="Base_Column_List">
    id, loan_id, uid, bid_money, bid_time, bid_status
  </sql>

  <!--查询平台的累计成交金额-->
  <select id="selectAllBidMoney" resultType="java.lang.Double">
    SELECT cast(sum(bid_money) as decimal(10,2)) from b_bid_info
  </select>

  <!--查询产品的最近10条投资记录-->
  <select id="selectRecentlyBidInfoByLoanId" resultMap="BidInfoUserResultMap">
    select
      b.*,u.*
      from
      b_bid_info b
      left join
      u_user u
      on
      b.uid = u.id
      where
      b.loan_id = #{loanId}
      order by
      bid_time desc
      limit #{currentPage},#{pageSize}
  </select>
  <!--根据产品id返回该产品的所以投资记录（List）-->
  <select id="selectBidInfoByLoanId" resultMap="BidInfoUserResultMap">
    select
    <include refid="Base_Column_List" />
    from b_bid_info
    where
    loan_id = #{loanId}
  </select>


  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
